@model Mvc.Models.Account.RegisterViewModel

@{
    ViewData["Title"] = "Registrar";
}
<h1>Registrar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="control-label">Senha</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PasswordConfirm" class="control-label">Confirme a senha</label>
                <input asp-for="PasswordConfirm" class="form-control" type="password" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn bg-navbar" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <div class="h-100 row">
            <div class="h-100 d-flex align-items-end">
                <div class="col-md-5">
                    <div class="alert alert-warning">
                        <p>A senha deve conter ao menos 8 caracteres, uma letra maiúscula, uma letra minúscula, um número e um carácter especial.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
